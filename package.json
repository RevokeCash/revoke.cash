{
  "name": "revoke.cash",
  "description": "Take back control of your wallet and stay safe by revoking token approvals you granted on Ethereum and over 100 other networks.",
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next-sitemap",
    "build:images": "GENERATE_OG_IMAGES=true next build && tsx scripts/move-cover-images.ts",
    "trim-sitemap": "sed 's,<urlset.*,<urlset xmlns=\"https://www.sitemaps.org/schemas/sitemap/0.9\" xmlns:xhtml=\"http://www.w3.org/1999/xhtml\">,g' public/sitemap.xml",
    "start": "next start",
    "analyze": "ANALYZE=true yarn build",
    "lint:checksums": "tsx scripts/lint-checksums.ts && git rm -r --cached -q data && git add --all data",
    "lint": "biome check .",
    "lint:staged": "yarn lint --error-on-warnings --no-errors-on-unmatched --staged .",
    "lint:fix": "yarn lint --write",
    "postinstall": "husky install",
    "translations:update": "localazy upload && localazy download && yarn lint:fix",
    "translations:update:md": "localazy upload -k localazy.content.keys.json -c localazy.content.json && localazy download -k localazy.content.keys.json -c localazy.content.json && tsx scripts/remove-untranslated-markdown-files.ts",
    "test": "yarn test:mocha && yarn test:cypress",
    "test:cypress": "cypress run",
    "test:mocha": "dotenvx run mocha test/**/*.test.ts",
    "exploits:update": "tsx scripts/update-exploits.ts ../approval-exploit-list ../whois",
    "tsx": "dotenvx run tsx"
  },
  "private": true,
  "dependencies": {
    "@abstract-foundation/agw-client": "^1.4.2",
    "@abstract-foundation/agw-react": "^1.5.4",
    "@dotenvx/dotenvx": "^1.35.0",
    "@envio-dev/hypersync-client": "^0.6.3",
    "@floating-ui/react": "^0.27.4",
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@neondatabase/serverless": "^0.10.4",
    "@privy-io/cross-app-connect": "^0.1.7",
    "@revoke.cash/chains": "^65.0.0",
    "@tanstack/query-sync-storage-persister": "^5.66.0",
    "@tanstack/react-query": "^5.66.0",
    "@tanstack/react-query-persist-client": "^5.66.0",
    "@tanstack/react-table": "^8.21.2",
    "@upstash/ratelimit": "^2.0.5",
    "@upstash/redis": "^1.34.4",
    "@vercel/speed-insights": "^1.2.0",
    "dexie": "^4.0.11",
    "install": "^0.13.0",
    "iron-session": "^8.0.4",
    "ky": "^1.7.5",
    "md5": "^2.3.0",
    "mixpanel-browser": "^2.55.0",
    "next": "^15.1.7",
    "next-intl": "^3.26.3",
    "nextjs-toploader": "^3.7.15",
    "npm": "^11.2.0",
    "p-queue": "^8.1.0",
    "rate-limiter-flexible": "^5.0.5",
    "react": "^19.0.0",
    "react-async-hook": "^4.0.0",
    "react-circular-progressbar": "^2.1.0",
    "react-dom": "^19.0.0",
    "react-lite-youtube-embed": "^2.4.0",
    "react-markdown": "^9.0.3",
    "react-select": "^5.10.0",
    "react-ssr-prepass": "^1.6.0",
    "react-sticky-box": "^2.0.5",
    "react-syntax-highlighter": "^15.6.1",
    "react-toastify": "^11.0.3",
    "reading-time-estimator": "^1.11.0",
    "remark-directive": "^3.0.1",
    "remark-directive-rehype": "^0.4.2",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.33.5",
    "tailwind-merge": "^3.0.1",
    "timeago-react": "^3.0.6",
    "timeago.js": "^4.0.2",
    "use-local-storage": "^3.0.0",
    "viem": "^2.30.0",
    "wagmi": "^2.15.4",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@cypress/grep": "^4.1.0",
    "@lavamoat/allow-scripts": "^3.3.1",
    "@localazy/cli": "^1.7.15",
    "@rainbow-me/rainbowkit": "^2.2.3",
    "@tailwindcss/postcss": "^4.0.11",
    "@tailwindcss/typography": "^0.5.16",
    "@types/md5": "^2.3.5",
    "@types/mixpanel-browser": "^2.49.1",
    "@types/node": "^22.13.1",
    "@types/nprogress": "^0.2.3",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/request-ip": "^0.0.41",
    "chai": "^5.1.2",
    "cypress": "^14.0.3",
    "fast-csv": "^5.0.2",
    "glob": "^11.0.1",
    "gray-matter": "^4.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "mocha": "^11.1.0",
    "next-bundle-analyzer": "^0.6.8",
    "next-circular-dependency": "^1.0.1",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.2",
    "tailwindcss": "4.0.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "walkdir": "^0.4.1"
  },
  "packageManager": "yarn@4.6.0",
  "lint-staged": {
    "*": "biome check --write --no-errors-on-unmatched"
  },
  "lavamoat": {
    "allowScripts": {
      "$root$": true,
      "@abstract-foundation/agw-react>secp256k1": false,
      "@biomejs/biome": true,
      "@vercel/speed-insights": false,
      "cypress": true,
      "sharp": true,
      "tsx>esbuild": true,
      "viem>ws>bufferutil": true,
      "viem>ws>utf-8-validate": true,
      "wagmi>@wagmi/connectors>cbw-sdk>keccak": false,
      "wagmi>@wagmi/connectors>@metamask/sdk>eciesjs>secp256k1": false
    }
  },
  "mocha": {
    "node-option": [
      "import=tsx"
    ],
    "timeout": 10000
  },
  "resolutions": {
    "rate-limiter-flexible@^5.0.0": "patch:rate-limiter-flexible@npm%3A5.0.0#./.yarn/patches/rate-limiter-flexible-npm-5.0.0-9e3dae9215.patch"
  }
}
