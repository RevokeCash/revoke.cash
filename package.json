{
  "name": "revoke.cash",
  "description": "Protect your Ethereum token balances by revoking allowances and permissions you granted applications in the past.",
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next-sitemap && yarn trim-sitemap",
    "trim-sitemap": "sed 's,<urlset.*,<urlset xmlns=\"https://www.sitemaps.org/schemas/sitemap/0.9\" xmlns:xhtml=\"http://www.w3.org/1999/xhtml\">,g' public/sitemap.xml > public/sitemap.xml",
    "start": "next start",
    "analyze": "ANALYZE=true yarn build",
    "lint:checksums": "ts-node scripts/lint-checksums.ts && git rm -r --cached -q public/dapp-contract-list && git add --all public/dapp-contract-list",
    "lint": "prettier --write .",
    "postinstall": "husky install",
    "translations:update": "localazy upload && localazy download && yarn lint",
    "test": "cypress run"
  },
  "private": true,
  "dependencies": {
    "@0xsequence/multicall": "^0.36.13",
    "@amplitude/analytics-browser": "^1.5.5",
    "@coinbase/wallet-sdk": "^3.5.3",
    "@gnosis.pm/safe-apps-sdk": "^7.8.0",
    "@gnosis.pm/safe-apps-web3modal": "^15.0.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@unstoppabledomains/resolution": "^8.3.3",
    "@upstash/ratelimit": "^0.1.5",
    "@upstash/redis": "^1.15.0",
    "@walletconnect/web3-provider": "^1.8.0",
    "axios": "^0.26.1",
    "axios-retry": "^3.3.1",
    "bootstrap": "^4.6.2",
    "cypress": "^11.2.0",
    "eth-chains": "^1.0.0",
    "ethers": "^5.7.2",
    "express-rate-limit": "^6.6.0",
    "iron-session": "^6.3.1",
    "next": "^12.3.1",
    "next-connect": "^0.12.2",
    "next-plugin-preact": "^3.0.7",
    "next-seo": "^5.8.0",
    "next-translate": "^1.6.0",
    "p-queue": "^7.3.0",
    "preact": "^10.11.2",
    "preact-render-to-string": "^5.2.5",
    "react": "npm:@preact/compat@17.0.3",
    "react-async-hook": "^4.0.0",
    "react-bootstrap": "^1.6.6",
    "react-dom": "npm:@preact/compat@17.0.3",
    "react-select": "^5.5.6",
    "react-spinners": "^0.11.0",
    "react-ssr-prepass": "npm:preact-ssr-prepass@^1.2.0",
    "react-switch": "^6.1.0",
    "react-toastify": "^8.2.0",
    "request-ip": "^2.2.0",
    "sass": "^1.55.0",
    "use-local-storage": "^2.3.6",
    "web3modal": "1.9.9"
  },
  "devDependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@localazy/cli": "^1.6.3",
    "@types/node": "^18.11.3",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "@types/request-ip": "^0.0.37",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "next-bundle-analyzer": "^0.6.5",
    "next-sitemap": "^3.1.29",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@3.2.0",
  "lint-staged": {
    "*": "prettier -u --write"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
