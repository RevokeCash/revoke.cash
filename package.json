{
  "name": "revoke.cash",
  "description": "Take back control of your wallet and stay safe by revoking token approvals you granted on Ethereum and over 100 other networks.",
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build && next-sitemap",
    "build:preview": "next build --profile && next-sitemap",
    "build:images": "GENERATE_OG_IMAGES=true next build && tsx scripts/move-cover-images.ts",
    "trim-sitemap": "sed 's,<urlset.*,<urlset xmlns=\"https://www.sitemaps.org/schemas/sitemap/0.9\" xmlns:xhtml=\"http://www.w3.org/1999/xhtml\">,g' public/sitemap.xml",
    "start": "next start",
    "analyze": "ANALYZE=true yarn build",
    "lint:checksums": "tsx scripts/lint-checksums.ts && git rm -r --cached -q data && git add --all data",
    "lint": "biome check .",
    "lint:staged": "yarn lint --error-on-warnings --no-errors-on-unmatched --staged .",
    "lint:fix": "yarn lint --write",
    "postinstall": "husky install",
    "translations:update": "localazy upload && localazy download && yarn lint:fix",
    "translations:update:md": "localazy upload -k localazy.content.keys.json -c localazy.content.json && localazy download -k localazy.content.keys.json -c localazy.content.json && tsx scripts/remove-untranslated-markdown-files.ts",
    "test": "yarn test:mocha && yarn test:cypress",
    "test:cypress": "cypress run",
    "test:mocha": "dotenvx run mocha test/**/*.test.ts --",
    "exploits:update": "tsx scripts/update-exploits.ts ../approval-exploit-list ../whois",
    "tsx": "dotenvx run tsx"
  },
  "private": true,
  "dependencies": {
    "@abstract-foundation/agw-client": "^1.10.0",
    "@abstract-foundation/agw-react": "^1.10.0",
    "@envio-dev/hypersync-client": "^0.6.7",
    "@floating-ui/react": "^0.27.16",
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.2.0",
    "@privy-io/cross-app-connect": "^0.2.3",
    "@revoke.cash/chains": "^73.0.0",
    "@tanstack/query-sync-storage-persister": "^5.90.13",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-query-persist-client": "^5.90.13",
    "@tanstack/react-table": "^8.21.3",
    "@upstash/ratelimit": "^2.0.7",
    "@upstash/redis": "^1.35.7",
    "@vercel/speed-insights": "^1.2.0",
    "dexie": "^4.2.1",
    "gray-matter": "^4.0.3",
    "iron-session": "^8.0.4",
    "ky": "^1.14.0",
    "md5": "^2.3.0",
    "mixpanel-browser": "^2.70.0",
    "next": "^15.5.6",
    "next-intl": "^4.5.6",
    "nextjs-toploader": "^3.9.17",
    "p-queue": "^9.0.1",
    "rate-limiter-flexible": "^8.3.0",
    "react": "^19.2.0",
    "react-async-hook": "^4.0.0",
    "react-dom": "^19.2.0",
    "react-lite-youtube-embed": "^2.6.0",
    "react-markdown": "^10.1.0",
    "react-select": "^5.10.2",
    "react-sticky-box": "^2.0.5",
    "react-syntax-highlighter": "^15.6.6",
    "react-toastify": "^11.0.5",
    "reading-time-estimator": "^1.14.0",
    "remark-directive": "^4.0.0",
    "remark-directive-rehype": "^0.4.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "timeago-react": "^3.0.7",
    "timeago.js": "^4.0.2",
    "use-local-storage": "^3.0.0",
    "viem": "^2.40.3",
    "wagmi": "^2.19.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cypress/grep": "^5.0.0",
    "@dotenvx/dotenvx": "^1.51.1",
    "@lavamoat/allow-scripts": "^3.4.1",
    "@localazy/cli": "^2.0.8",
    "@next/bundle-analyzer": "^15.5.6",
    "@rainbow-me/rainbowkit": "^2.2.9",
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@types/md5": "^2.3.6",
    "@types/mixpanel-browser": "^2.60.0",
    "@types/node": "^22.19.1",
    "@types/nprogress": "^0.2.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/request-ip": "^0.0.41",
    "chai": "^6.2.1",
    "cypress": "^15.7.0",
    "fast-csv": "^5.0.5",
    "glob": "^11.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^11.7.5",
    "next-circular-dependency": "^1.0.1",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.6",
    "tailwindcss": "4.1.17",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "walkdir": "^0.4.1"
  },
  "packageManager": "yarn@4.6.0",
  "lint-staged": {
    "*": "biome check --write --no-errors-on-unmatched"
  },
  "lavamoat": {
    "allowScripts": {
      "$root$": true,
      "@abstract-foundation/agw-react>secp256k1": false,
      "@biomejs/biome": true,
      "@tailwindcss/postcss>@tailwindcss/oxide": false,
      "@vercel/speed-insights": false,
      "cypress": true,
      "next>sharp": true,
      "next-intl>@swc/core": true,
      "tsx>esbuild": true,
      "viem>ws>bufferutil": true,
      "viem>ws>utf-8-validate": true,
      "wagmi>@wagmi/connectors>cbw-sdk>keccak": false,
      "wagmi>@wagmi/connectors>@metamask/sdk>eciesjs>secp256k1": false
    }
  },
  "mocha": {
    "node-option": [
      "import=tsx"
    ],
    "timeout": 30000,
    "exit": true
  },
  "resolutions": {
    "rate-limiter-flexible@^5.0.0": "patch:rate-limiter-flexible@npm%3A5.0.0#./.yarn/patches/rate-limiter-flexible-npm-5.0.0-9e3dae9215.patch"
  }
}
